---
import logo from "../assets/board-64.png";

// Props for authentication state (future use)
interface Props {
  isAuthenticated?: boolean;
  userName?: string;
}

const { isAuthenticated = false, userName = "" } = Astro.props;
---

<header class="navbar bg-base-100">
  <div class="navbar-start">
    <!-- Mobile menu dropdown -->
    <div class="dropdown lg:hidden">
      <div
        tabIndex={0}
        role="button"
        class="btn btn-ghost"
        aria-label="Open menu"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </div>
      <ul
        tabIndex={0}
        class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52"
      >
        <li><a href="/">Home</a></li>
        <li><a href="/about">About</a></li>
        {
          !isAuthenticated && (
            <>
              <li>
                <a href="/signin">Sign In</a>
              </li>
              <li>
                <a href="/signup">Sign Up</a>
              </li>
            </>
          )
        }
      </ul>
    </div>

    <!-- Logo / Brand -->
    <a href="/" class="btn btn-ghost text-xl font-bold">
      <img src={logo.src} alt="baduk.online logo" class="w-8 h-8" />
      <span class="hidden sm:inline">baduk.online</span>
      <span class="sm:hidden">囲碁</span>
    </a>
  </div>

  <!-- Desktop navigation -->
  <div class="navbar-center hidden lg:flex">
    <ul class="menu menu-horizontal px-1 gap-2">
      <li><a href="/" class="btn btn-ghost">Home</a></li>
      <li><a href="/about" class="btn btn-ghost">About</a></li>
    </ul>
  </div>

  <div class="navbar-end gap-2">
    <!-- Theme toggle -->
    <label class="swap swap-rotate btn btn-ghost btn-circle">
      <input type="checkbox" class="theme-controller" value="dark" />

      <!-- Sun icon -->
      <svg
        class="swap-off fill-current w-6 h-6"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
      >
        <path
          d="M5.64,17l-.71.71a1,1,0,0,0,0,1.41,1,1,0,0,0,1.41,0l.71-.71A1,1,0,0,0,5.64,17ZM5,12a1,1,0,0,0-1-1H3a1,1,0,0,0,0,2H4A1,1,0,0,0,5,12Zm7-7a1,1,0,0,0,1-1V3a1,1,0,0,0-2,0V4A1,1,0,0,0,12,5ZM5.64,7.05a1,1,0,0,0,.7.29,1,1,0,0,0,.71-.29,1,1,0,0,0,0-1.41l-.71-.71A1,1,0,0,0,4.93,6.34Zm12,.29a1,1,0,0,0,.7-.29l.71-.71a1,1,0,1,0-1.41-1.41L17,5.64a1,1,0,0,0,0,1.41A1,1,0,0,0,17.66,7.34ZM21,11H20a1,1,0,0,0,0,2h1a1,1,0,0,0,0-2Zm-9,8a1,1,0,0,0-1,1v1a1,1,0,0,0,2,0V20A1,1,0,0,0,12,19ZM18.36,17A1,1,0,0,0,17,18.36l.71.71a1,1,0,0,0,1.41,0,1,1,0,0,0,0-1.41ZM12,6.5A5.5,5.5,0,1,0,17.5,12,5.51,5.51,0,0,0,12,6.5Zm0,9A3.5,3.5,0,1,1,15.5,12,3.5,3.5,0,0,1,12,15.5Z"
        ></path>
      </svg>

      <!-- Moon icon -->
      <svg
        class="swap-on fill-current w-6 h-6"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
      >
        <path
          d="M21.64,13a1,1,0,0,0-1.05-.14,8.05,8.05,0,0,1-3.37.73A8.15,8.15,0,0,1,9.08,5.49a8.59,8.59,0,0,1,.25-2A1,1,0,0,0,8,2.36,10.14,10.14,0,1,0,22,14.05,1,1,0,0,0,21.64,13Zm-9.5,6.69A8.14,8.14,0,0,1,7.08,5.22v.27A10.15,10.15,0,0,0,17.22,15.63a9.79,9.79,0,0,0,2.1-.22A8.11,8.11,0,0,1,12.14,19.73Z"
        ></path>
      </svg>
    </label>

    <!-- User menu when authenticated -->
    {
      isAuthenticated ? (
        <div class="dropdown dropdown-end">
          <div
            tabIndex={0}
            role="button"
            class="btn btn-ghost btn-circle avatar placeholder"
            aria-label="User menu"
          >
            <div class="bg-neutral text-neutral-content rounded-full w-10">
              <span class="text-xl">{userName.charAt(0).toUpperCase()}</span>
            </div>
          </div>
          <ul
            tabIndex={0}
            class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52"
          >
            <li class="menu-title">{userName}</li>
            <li>
              <a href="/profile">Profile</a>
            </li>
            <li>
              <a href="/settings">Settings</a>
            </li>
            <li>
              <hr class="my-2" />
            </li>
            <li>
              <a href="/logout">Logout</a>
            </li>
          </ul>
        </div>
      ) : (
        <div class="hidden lg:flex gap-2">
          <a href="/signin" class="btn btn-ghost">
            Sign In
          </a>
          <a href="/signup" class="btn btn-primary">
            Sign Up
          </a>
        </div>
      )
    }
  </div>
</header>

<script is:inline>
  // Theme controller - sync with localStorage and system preference
  // This script runs inline to prevent FOUC (Flash of Unstyled Content)
  (function () {
    const initTheme = () => {
      const savedTheme = localStorage.getItem("theme");
      const systemPrefersDark = window.matchMedia(
        "(prefers-color-scheme: dark)",
      ).matches;
      const isDark =
        savedTheme === "dark" || (!savedTheme && systemPrefersDark);

      document.documentElement.setAttribute(
        "data-theme",
        isDark ? "dark" : "light",
      );
    };

    // Initialize theme immediately
    initTheme();

    // Set up event listener after DOM is ready
    document.addEventListener("DOMContentLoaded", () => {
      const themeController = document.querySelector(".theme-controller");

      if (themeController) {
        // Sync checkbox with current theme
        const currentTheme =
          document.documentElement.getAttribute("data-theme");
        themeController.checked = currentTheme === "dark";

        // Toggle theme on change
        themeController.addEventListener("change", (e) => {
          const theme = e.target.checked ? "dark" : "light";
          document.documentElement.setAttribute("data-theme", theme);
          localStorage.setItem("theme", theme);
        });
      }
    });
  })();
</script>
